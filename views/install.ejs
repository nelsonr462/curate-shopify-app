  <body>

    <div class="container">

      <form class="form-signin">
        <h4 class="form-signin-heading">Enter your Shopify store URL</h4>
        <br>
        <label for="inputUrl" class="sr-only">some-store.myshopify.com</label>
        <input type="text" id="inputUrl" class="form-control" placeholder="some-store.shopify.com" required autofocus>
        <div id="errorMessage"style="text-align: center; padding: 5px 0px 5px 0px; color: red; opacity: 0;">
          Invalid Shopify store URL
     		</div>
        <br>
        
        <button class="btn btn-lg btn-primary btn-block" type="submit">Install App</button>
      </form>

    </div> <!-- /container -->


    <!-- IE10 viewport hack for Surface/desktop Windows 8 bug -->
    <script src="../js/ie10-viewport-bug-workaround.js"></script>
    <script src="../js/jquery.min.js"></script>
    <script src="../js/install.js"></script>
  </body>
